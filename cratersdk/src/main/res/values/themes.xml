<resources>

    <style name="Theme.Crater.Starting" parent="Theme.SplashScreen">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/img_splash_background</item>
        <item name="windowSplashScreenBackground">@color/transparent</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_icon</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.Crater</item>
    </style>

    <!-- Base application theme. -->
    <style name="Base.Theme.Crater" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowBackground">@drawable/img_splash_background</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="fontFamily">@font/inter_medium</item>
    </style>

    <style name="Theme.Crater" parent="Base.Theme.Crater">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/primary</item>
        <item name="colorSecondaryVariant">@color/primary</item>
        <item name="colorOnSecondary">@color/black</item>
    </style>

</resources>